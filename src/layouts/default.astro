---
import Container from "../components/Container.astro";
import Footer from "../components/Footer.astro";
import BaseHead from "../components/BaseHead.astro";
import AnimatedBackgroundShapes from "../components/AnimatedBackgroundShapes.astro";

type Props = {
  title?: string;
  description?: string;
  excerpt?: string;
  frontMatter: {
    title: string;
    excerpt: string;
  };
  meta: {
    title: string;
    excerpt: string;
  };
};

const { title, description, excerpt } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>

  <body className="text-white bg-white dark:bg-black dark:text-black transition duration-500 ease-in-out">
    <AnimatedBackgroundShapes />
    <Container>
      <div className="text-white bg-white dark:bg-black dark:text-black transition duration-500 ease-in-out">
        <article className="flex flex-col items-start justify-center w-full max-w-2xl mx-auto mb-16">
          <h1 className="mb-4 text-3xl font-bold tracking-tight text-black md:text-5xl dark:text-white">
            {title}
          </h1>
          <p className="mt-2 mb-8 text-gray-700 dark:text-gray-300">
            {excerpt}
          </p>
          <div className="w-full prose dark:prose-invert">
            <slot />
          </div>
        </article>
      </div>
    </Container>
    <Footer />
  </body>
</html>
