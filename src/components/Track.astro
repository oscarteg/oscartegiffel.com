---
export type Props = {
  ranking: string;
  songUrl: string;
  title: string;
  artist: string;
};

const { ranking, songUrl, title, artist } = Astro.props;
---

<div
  class="flex flex-row items-baseline w-full max-w-3xl mt-8 border-b border-gray-100 dark:border-gray-800"
>
  <p class="text-sm font-bold text-gray-400 dark:text-gray-600">
    {ranking}
  </p>
  <div class="flex flex-col pl-3">
    <a
      class="font-medium text-gray-900 truncate dark:text-gray-100 w-60 sm:w-96 md:w-full"
      href={songUrl}
      target="_blank"
      rel="noopener noreferrer"
    >
      {title}
    </a>
    <p
      class="mb-4 text-gray-500 truncate w-60 sm:w-96 md:w-full"
      color="gray.500"
    >
      {artist}
    </p>
  </div>
</div>
