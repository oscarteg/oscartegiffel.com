---
const { className } = Astro.props;

function isCurrentUrl(url: string) {
  return Astro.url.pathname === url;
}
---

<style>
  a {
    @apply rounded p-2 hover:text-primary transition font-semibold flex;
  }

  a.current {
    @apply bg-neutral-700 text-white;
  }
</style>

<aside class={className}>
  <nav class="flex flex-row md:flex-col space-x-0 pr-10 mb-2 mt-2 md:mt-0">
    <a href="/" class:list={["text-neutral-500", { current: isCurrentUrl("/") }]}>home</a>
    <a href="/blog" class:list={["text-neutral-500", { current: isCurrentUrl("/blog") }]}>blog</a>
    <a href="/pages/uses" class:list={["text-neutral-500", { current: isCurrentUrl("/pages/uses") }]}>uses</a>
    <a href="/pages/workflow" class:list={["text-neutral-500", { current: isCurrentUrl("/pages/workflow") }]}
      >workflow</a
    >
    <a href="/pages/resources" class:list={["text-neutral-500", { current: isCurrentUrl("/pages/resources") }]}
      >workflow</a
    >
  </nav>
</aside>
