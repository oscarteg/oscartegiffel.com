---
import type { Post } from "../models";

export type Props = {
  post: Post;
};

const {
  post: {
    id,
    slug,
    data: { title },
  },
} = Astro.props;
---

<a class="w-full" href={`/blog/${slug}`} id={id}>
  <div class="flex flex-col justify-between md:flex-row">
    <p class="w-full mb-2 text-lg font-medium">
      {title}
    </p>
  </div>
</a>
