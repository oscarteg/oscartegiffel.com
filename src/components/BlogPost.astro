---
import dayjs from "dayjs";
import type { Post } from "../models";

export type Props = {
	post: Post;
};

const {
	post: {
		id,
		data: { title, draft, publishDate },
	},
} = Astro.props;
---

<a
  class="post-row group block"
  class:list={[{ "outline outline-red-500 outline-1 rounded": draft }]}
  href={`/blog/${id}`}
>
  <div class="flex justify-between items-baseline py-3">
    <div class="flex items-center min-w-0">
      <span class="w-1 h-1 bg-primary rounded-full inline-block mr-3 shrink-0"></span>
      <h3 class="post-title font-serif text-xl md:text-2xl transition-colors truncate">
        {title}
      </h3>
    </div>
    <span class="text-text-muted text-xs font-light tabular-nums tracking-wider uppercase ml-4 shrink-0">
      {dayjs(publishDate).format("MMM DD")}
    </span>
  </div>
</a>
