---
import dayjs from "dayjs";
import relativeTime from "dayjs/plugin/relativeTime"; // import plugin
import type { Post } from "../models";

dayjs.extend(relativeTime); // use plugin

export type Props = {
  post: Post;
};

const {
  post: {
    id,
    data: { title, description, tags, publishDate, draft },
  },
} = Astro.props;
---

<li class="relative transition duration-500 mb-12" class:list={[{"bg-amber-500/50": draft}]} >
  <a class="w-full cursor-pointer block" href={`/blog/${id}`} id={id}>
      <div class="space-y-4">
          <h3 class="font-serif italic font-normal text-3xl md:text-4xl leading-tight tracking-tight">
        {title}
          </h3>
          {description && <p class="text-base md:text-lg leading-relaxed dark:text-gray-300">{description}</p>}
      </div>
  </a>
</li>
