---
import dayjs from "dayjs";
import relativeTime from "dayjs/plugin/relativeTime"; // import plugin
import type { Post } from "../models";

dayjs.extend(relativeTime); // use plugin

export type Props = {
	post: Post;
};

const {
	post: {
		id,
		slug,
		data: { title, description, tags },
	},
} = Astro.props;
---

<li class="relative py-5 hover:bg-zinc-800 transition rounded px-4 duration-500">
  <a class="w-full cursor-pointer flex gap-y-2" href={`/blog/${slug}`} id={id}>
      <div class="flex-grow space-y-3 ">
          <p class="font-semibold leading-6">
            {title}
          </p>
          {description && <p class="mt-1 flex text-xs leading-5 text-gray-500 line-clamp-2">{description}</p>}
        <div class="text-sm leading-6 flex flex-wrap ">
          {
            tags.map((tag) => (
              <span class="rounded-md px-2 py-1 text-xs font-medium text-[#FFD900] ring-1 ring-inset ring-[#FFD900]/10 whitespace-nowrap inline-block">
                {tag}
              </span>
            ))
          }
        </div>
      </div>
      <div class="flex flex-shrink-0 items-center gap-x-4">
          <svg
            class="h-5 w-5 flex-none text-gray-400"
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="lucide lucide-chevron-right"><path d="m9 18 6-6-6-6"></path>
          </svg>
        </div>
    </div>
  </a>
</li>
