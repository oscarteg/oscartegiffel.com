import { siteMetadata } from "../config";
import ExternalLink from "./ExternalLink.astro";
---

<footer class="flex justify-center md:justify-start space-x-4 mb-8 hover:text-primary">
{siteMetadata.socials.map((social) => (
 <ExternalLink href={social.url}>
    <span class="sr-only">{social.name}</span>
    {social.name}
    
    </ExternalLink>
))}
</footer>
