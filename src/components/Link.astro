---
const { href } = Astro.props;
const path = Astro.url.pathname;
const isActive = href === "/" ? path === href : path.startsWith(href);
---

<a
  href={href}
  class:list={[
    "nav-link transition-colors duration-200 hover:text-text-main dark:hover:text-white",
    isActive ? "nav-link-active text-text-main dark:text-white" : "text-text-muted",
  ]}
>
  <slot />
</a>
