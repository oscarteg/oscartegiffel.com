---
// Link.astro
const { href } = Astro.props;
const path = Astro.url.pathname;
const isActive = href === "/" ? path === href : path.startsWith(href);
---

<a 
  href={href} 
  class:list={[
    "relative px-3 py-2 font-medium text-neutral-400 transition-colors duration-200",
    "before:absolute before:-left-2 before:top-1/2 before:w-1.5 before:h-1.5 before:rounded-full before:bg-neutral-500 before:-translate-y-1/2 before:opacity-0 before:transition-opacity before:duration-200",
    "hover:text-primary hover:before:opacity-100",
    { "text-primary rounded-md before:opacity-100 before:bg-primary": isActive }
  ]}
>
  <slot />
</a>
