---
export type Props = {
  loading?: boolean;
};

const { loading = false } = Astro.props;
---

{
  loading && (
    <div class="w-full max-w-sm p-4 mx-auto border border-blue-300 shadow rounded-lg">
      <div class="flex animate-pulse space-x-4">
        <div class="w-12 h-12 bg-blue-400 rounded-full" />
        <div class="flex-1 py-1 space-y-4">
          <div class="w-3/4 h-4 bg-blue-400 rounded" />
          <div class="space-y-2">
            <div class="h-4 bg-blue-400 rounded" />
            <div class="w-5/6 h-4 bg-blue-400 rounded" />
          </div>
        </div>
      </div>
    </div>
  )
}
