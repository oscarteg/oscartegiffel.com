---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import TableOfContents from "../components/TableOfContents.astro";

type Props = {
	title?: string;
	description?: string;
	headings?: { depth: number; slug: string; text: string }[];
	toc: boolean;
};

const { title, description, headings = [], toc = false } = Astro.props;
const hasToc = toc && headings.length > 0;
---
<html lang="en" class="scroll-smooth antialiased">
  <head>
    <BaseHead title={title} description={description} />
  </head>

  <body class="font-sans min-h-screen flex flex-col">
    <Header />

    {hasToc ? (
      <div class="max-w-5xl mx-auto px-6 py-16 md:py-20 w-full flex-1">
        <div class="flex gap-16">
          <div class="flex-1 min-w-0 max-w-2xl">
            <slot />
          </div>
          <aside class="hidden xl:block w-56 shrink-0 self-start sticky top-24">
            <h2 class="text-[11px] uppercase tracking-[0.2em] text-text-muted font-medium mb-4">On this page</h2>
            <TableOfContents headings={headings} />
          </aside>
        </div>
      </div>
    ) : (
      <main class="max-w-2xl mx-auto px-6 py-16 md:py-20 w-full flex-1">
        <slot />
      </main>
    )}

    <Footer />
  </body>
</html>
